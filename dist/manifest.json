{
  "name": "Clap For Cat",
  "description": "Popup cat picture when you clap",
  "version": "1.0.0",
  "manifest_version": 3,
  "permissions": ["storage", "activeTab","alarms", "notifications"],
  "action": {
    "default_icon": {
      "16": "/images/cat16.png",
      "32": "/images/cat32.png",
      "48": "/images/cat48.png",
      "128": "/images/cat128.png"
    },
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "/images/cat16.png",
    "32": "/images/cat32.png",
    "48": "/images/cat48.png",
    "128": "/images/cat128.png"
  },
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": ["<all_urls>"],
      "all_frames": true
    }
  ]
}
